<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="#fefefe"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_shared_sina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="29dp"
                android:layout_weight="1"
                android:src="@drawable/active_signup_shared_sina" />

            <ImageView
                android:id="@+id/dialog_shared_weichat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/active_signup_shared_weichat" />

            <ImageView
                android:id="@+id/dialog_shared_weifriend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/active_signup_shared_weifriend" />

            <ImageView
                android:id="@+id/dialog_shared_qqfriend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="29dp"
                android:layout_weight="1"
                android:src="@drawable/active_signup_shared_qqfriend" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="7dp" />

        <TextView
            android:id="@+id/dialog_shared_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fefefd"
            android:gravity="center"
            android:text="取消"
            android:textColor="#d000"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>