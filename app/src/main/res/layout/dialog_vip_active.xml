<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="260dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:id="@+id/vip_lucky_layout"
            android:layout_width="200dp"
            android:layout_height="260dp"
            android:background="@drawable/vip_center_active_bg"
            android:visibility="invisible">

            <TextView
                android:id="@+id/vip_Lucky_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="恭喜您"
                android:textColor="#fff"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vip_Lucky_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="5dp"
                android:text="10元优惠券"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vip_Lucky_discribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="已放入您的钱包优惠券当中,快去看看吧"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/vip_Lucky_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="1/3"
                android:textColor="#fff"
                android:textSize="14sp" />

            <com.neishenme.what.view.RubberView
                android:id="@+id/vip_lucky_scratch"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>