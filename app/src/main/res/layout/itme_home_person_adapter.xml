<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="68">

            <com.neishenme.what.view.RadiusImageViewTwo
                android:id="@+id/home_person_user_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/picture_moren" />

            <ImageView
                android:id="@+id/home_person_user_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:background="@drawable/home_person_hot_hot" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="22"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_person_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp"
                    android:text="金刚葫芦娃"
                    android:textColor="#d000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/home_person_user_gender"
                        android:layout_width="9dp"
                        android:layout_height="17dp"
                        android:src="@drawable/woman_icon" />

                    <TextView
                        android:id="@+id/home_person_user_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:paddingBottom="2dp"
                        android:textColor="#8a8a8a"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/home_person_add_focus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:scaleType="center"
                android:src="@drawable/home_person_add_focus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="35dp"
            android:layout_weight="12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_person_interest_1"
                style="@style/home_person_user_interest_style"
                android:background="@drawable/home_person_user_interest_bg4"
                android:text="游泳" />

            <TextView
                android:id="@+id/home_person_interest_2"
                style="@style/home_person_user_interest_style"
                android:background="@drawable/home_person_user_interest_bg3"
                android:text="游泳" />

            <TextView
                android:id="@+id/home_person_interest_3"
                style="@style/home_person_user_interest_style"
                android:background="@drawable/home_person_user_interest_bg2"
                android:text="游泳" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
