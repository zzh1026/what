<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_white_border_black_radius_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_80"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_30"
                android:src="@drawable/tanchuang_quxiao2x"
                android:text="取消" />

            <TextView
                android:id="@+id/wheel_dialog_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="test"
                android:textColor="#222222"
                android:textSize="@dimen/txt_32" />

            <ImageView
                android:id="@+id/commit"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_30"
                android:src="@drawable/tanchuang_queding2x" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2"
            android:background="#eeeeee" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.neishenme.what.view.loopview.LoopView
                android:id="@+id/loopview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />
            <View
                android:id="@+id/line_center"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="@color/transparent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@id/line_center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:background="#eeeeee"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/line_center"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginTop="10dp"
                android:background="#eeeeee"/>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>