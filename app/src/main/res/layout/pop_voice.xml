<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black_aa000000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="183dp"
        android:gravity="center"
        android:text="当前录制时长0''"
        android:textColor="@color/Whiteffffff"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_voice_wave"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="232dp"
        android:src="@drawable/record_icon" />

    <ImageView
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_voice_wave"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/voice_start" />

    <Button
        android:id="@+id/btn_voice_delete"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/btn_pause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/voice_frame"
        android:text="删除重录"
        android:textColor="@color/Whitef4f4f4"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_voice_complete"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/btn_voice_delete"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/voice_frame"
        android:text="完成"
        android:textColor="@color/Whitef4f4f4"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent" />

</RelativeLayout>