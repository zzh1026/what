<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/dialog_vip_lucky_layout"
        android:layout_width="310dp"
        android:layout_height="229dp"
        android:visibility="invisible">

        <View
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:background="@drawable/dialog_vip_lucky_top_bg" />

        <RelativeLayout
            android:layout_width="266dp"
            android:layout_height="142dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/dialog_vip_lucky_center_bg" />

            <TextView
                android:id="@+id/dialog_vip_lucky_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/dialog_vip_lucky_time_bg"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="35dp"
                android:text="您还有2次机会"
                android:textColor="#fff"
                android:textSize="11sp" />

            <RelativeLayout
                android:layout_width="202dp"
                android:layout_height="59dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="36dp"
                android:background="@drawable/dialog_vip_lucky_content_bg">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0px">

                    <TextView
                        android:id="@+id/dialog_vip_lucky_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="10元优惠券"
                        android:textColor="#f00"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <com.neishenme.what.view.RubberView
                        android:id="@+id/dialog_vip_lucky_scratch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/dialog_vip_lucky_commit"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dialog_vip_lucky_commit" />

    </RelativeLayout>

</RelativeLayout>