<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="13dp"
    android:paddingTop="13dp">

    <ImageView
        android:id="@+id/item_star_number"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp" />

    <LinearLayout
        android:id="@+id/item_star_vote_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout style="@style/date_star_item_header_layout_style">

            <ImageView
                android:id="@+id/item_star_star_crow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/item_star_star_bg"
                style="@style/date_star_item_head_frame_style">

                <com.neishenme.what.view.CircleImageView
                    android:id="@+id/item_star_star_header"
                    style="@style/date_star_item_header_view_style"
                    android:src="@drawable/picture_moren" />
            </FrameLayout>

            <ImageView
                android:id="@+id/item_star_star_des"
                style="@style/date_star_item_des_style" />

            <TextView
                android:id="@+id/item_star_star_name"
                style="@style/date_star_item_name_style"
                android:layout_below="@id/item_star_star_des" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_star_releash_type"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="25dp" />

        <RelativeLayout style="@style/date_star_item_header_layout_style">

            <FrameLayout
                android:id="@+id/item_star_user_bg"
                style="@style/date_star_item_head_frame_style">

                <com.neishenme.what.view.CircleImageView
                    android:id="@+id/item_star_user_header"
                    style="@style/date_star_item_header_view_style"
                    android:src="@drawable/picture_moren" />
            </FrameLayout>

            <ImageView
                android:id="@+id/item_data_star_user_des"
                style="@style/date_star_item_des_style" />

            <TextView
                android:id="@+id/item_data_star_user_name"
                style="@style/date_star_item_name_style"
                android:layout_below="@id/item_data_star_user_des" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总票数"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_data_star_vote_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="10000"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="3dp">

        <ImageView
            android:id="@+id/item_data_star_vote_her"
            android:layout_width="65dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="3dp" />
    </LinearLayout>
</LinearLayout>