<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_news_item_bg"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_news_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:maxLines="2"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:textColor="#b000"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/home_news_rl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/home_news_tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#a5a5a5"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/home_news_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/home_news_tv_data"
            android:layout_below="@id/home_news_tv_data"
            android:layout_marginTop="5dp"
            android:text="19:34"
            android:textColor="#a5a5a5"
            android:textSize="11sp" />
    </RelativeLayout>
</LinearLayout>