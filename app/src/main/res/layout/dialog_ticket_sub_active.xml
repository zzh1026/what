<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="44dp"
    android:background="#9000">

    <com.neishenme.what.view.CustomScrollView
        android:id="@+id/ticket_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ticket_cancle"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:padding="6dp"
                android:src="@drawable/active_dialog_cancle" />

            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:layout_marginRight="17dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/active_dialog_line_bg" />

            <RelativeLayout
                android:layout_width="210.5dp"
                android:layout_height="271dp">

                <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/active_dialog_content_bg"
                    android:orientation="vertical">

                    <com.neishenme.what.view.RadiusImageViewTwo
                        android:id="@+id/dialog_ticket_user_logo"
                        android:layout_width="match_parent"
                        android:layout_height="166dp"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/picture_moren" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ticket_sub_user_gender"
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="24dp" />

                        <TextView
                            android:id="@+id/ticket_sub_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:textColor="#282828"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="21dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/active_dialog_less"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/active_dialog_less_num" />

                        <EditText
                            android:id="@+id/active_dialog_sub_num"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_weight="1"
                            android:background="@drawable/active_dialog_edit_num"
                            android:cursorVisible="false"
                            android:ellipsize="middle"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="1"
                            android:textColor="#282828"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/active_dialog_add"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/active_dialog_add_num" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/active_dialog_ticket_num"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/active_dialog_ticket_num"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp"
                    android:textColor="#fff" />

            </RelativeLayout>

            <TextView
                android:id="@+id/active_dialog_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:background="@drawable/active_dialog_submit" />
        </LinearLayout>
    </com.neishenme.what.view.CustomScrollView>

    <View
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent" />

</RelativeLayout>