<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_24"
    android:layout_marginRight="@dimen/margin_24"
    android:layout_marginTop="15dp"
    android:background="@drawable/rectanglef9"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_380"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_50"
        android:src="@drawable/icon_menu2x" />

    <com.neishenme.what.view.ListViewAdjustHeight
        android:id="@+id/lv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_62"
        android:divider="@null"
        android:fadingEdge="none"></com.neishenme.what.view.ListViewAdjustHeight>


</LinearLayout>



