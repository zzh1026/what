<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/active_my_bg"
    tools:context="com.neishenme.what.fragment.ActiveMyAddFragment">

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/active_my_add_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/active_my_add_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="210.5dp"
                android:layout_height="278dp"
                android:layout_marginTop="38dp">

                <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/active_dialog_content_bg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="188dp">

                        <com.neishenme.what.view.RadiusImageViewTwo
                            android:id="@+id/active_frag_userlogo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2.5dp"
                            android:layout_marginRight="3dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_header" />

                        <LinearLayout
                            android:layout_width="58dp"
                            android:layout_height="23dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/item_active_ticket_bg"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginLeft="7dp"
                                android:src="@drawable/item_active_ticket_iv" />

                            <TextView
                                android:id="@+id/active_frag_join_ticket_num"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="1200"
                                android:textColor="#fff"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/active_frag_user_gender"
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="24dp"
                            android:src="@drawable/woman_icon" />

                        <TextView
                            android:id="@+id/active_frag_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="FACKKOI"
                            android:textColor="#282828"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/active_frag_join_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="20人已约"
                        android:textColor="#a8a8a8"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/active_frag_ticket_num"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/active_dialog_ticket_num"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingTop="2dp"
                    android:text="120"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/active_my_add_bg" />

            <com.neishenme.what.view.ListViewAdjustHeight
                android:id="@+id/active_frag_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="48dp"
                android:divider="@null"></com.neishenme.what.view.ListViewAdjustHeight>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

    <LinearLayout
        android:id="@+id/active_join_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/active_my_null_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:src="@drawable/active_my_go_join_bg" />
    </LinearLayout>

</RelativeLayout>
