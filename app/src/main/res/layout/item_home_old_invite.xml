<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--该界面是主页附近的邀请条目的一个备份, 为了防止修改错误, 理论上是没有用的-->
    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:background="@drawable/home_invite_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="1dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/invite_item_linebg_1"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/home_invite_1_1" />

            <ImageView
                android:id="@+id/invite_item_header_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/picture_moren" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/invite_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="24dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="吃饭随便吃,来啊讲真我就不信了,真是的"
                android:textColor="#2c2c2c"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/invite_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/invite_item_title"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="8dp"
                android:text="专属发布 / girl"
                android:textColor="#737373"
                android:textSize="13sp"></TextView>

            <LinearLayout
                android:id="@+id/invite_item_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/invite_item_type"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/invite_item_user_gender"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginLeft="21dp"
                    android:src="@drawable/woman_icon" />

                <TextView
                    android:id="@+id/invite_item_user_name"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:lines="1"
                    android:text="金刚葫芦娃"
                    android:textColor="#989898"
                    android:textSize="10sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/money_pic"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@id/invite_item_user_info"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/home_invite_price_bg" />

            <TextView
                android:id="@+id/invite_item_price_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/invite_item_user_info"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/money_pic"
                android:text="3200"
                android:textStyle="bold"
                android:textColor="#f66d70"
                android:textSize="23sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/invite_item_play_sound"
                    android:layout_width="34dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/home_play" />

                <TextView
                    android:id="@+id/invite_item_play_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="0"
                    android:textColor="#989898"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/home_look" />

                <TextView
                    android:id="@+id/invite_item_priview_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:lines="1"
                    android:text="0"
                    android:textColor="#989898"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/invite_item_linebg_2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/home_invite_1_2" />

        <RelativeLayout
            android:id="@+id/invite_item_join_invite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/invite_item_linebg_3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:background="@drawable/home_invite_1_3" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>