<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/home_invite_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="1dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/invite_item_linebg_1"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/home_invite_1_1" />

            <ImageView
                android:id="@+id/invite_item_header_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/picture_moren" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/invite_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="吃饭随便吃,来啊讲真我就不信了,真是的"
                android:textColor="#2c2c2c"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                style="@style/item_home_invite_out_layout"
                android:layout_marginTop="9dp">

                <TextView
                    style="@style/item_home_invite_in_text_style"
                    android:text="邀请对象:" />

                <TextView
                    android:id="@+id/invite_item_type"
                    style="@style/item_home_invite_in_content_style"
                    android:text="女" />
            </LinearLayout>

            <LinearLayout style="@style/item_home_invite_out_layout">

                <TextView
                    style="@style/item_home_invite_in_text_style"
                    android:text="活动地点:" />

                <TextView
                    android:id="@+id/invite_item_position"
                    style="@style/item_home_invite_in_content_style" />
            </LinearLayout>

            <LinearLayout style="@style/item_home_invite_out_layout">

                <TextView
                    style="@style/item_home_invite_in_text_style"
                    android:text="当前加单:" />

                <TextView
                    android:id="@+id/invite_item_join_number"
                    style="@style/item_home_invite_in_content_style"
                    android:text="8人" />
            </LinearLayout>

            <LinearLayout style="@style/item_home_invite_out_layout">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/home_invite_price_bg" />

                <TextView
                    android:id="@+id/invite_item_price_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="3200"
                    android:textColor="#f66d70"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="22dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/invite_item_user_gender"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:src="@drawable/woman_icon" />

                    <TextView
                        android:id="@+id/invite_item_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="金刚葫芦娃"
                        android:textColor="#989898"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/invite_item_play_sound"
                        android:layout_width="34dp"
                        android:layout_height="35dp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="8dp"
                        android:paddingTop="12dp"
                        android:src="@drawable/home_play" />

                    <TextView
                        android:id="@+id/invite_item_play_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="0"
                        android:textColor="#989898"
                        android:textSize="10sp" />

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/invite_item_distence_bg" />

                    <TextView
                        android:id="@+id/invite_item_distence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:lines="1"
                        android:text="0"
                        android:textColor="#989898"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/invite_item_linebg_2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/home_invite_1_2" />

        <RelativeLayout
            android:id="@+id/invite_item_join_invite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/invite_item_linebg_3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:background="@drawable/home_invite_1_3" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>