<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/item_frist"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#00000000"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Whiteffffff">


        <ImageView
            android:id="@+id/iv_add_friends"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/add_friends"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="26dp"
            android:text="请我吃饭啦..."
            android:textColor="@color/whitefbfaf7"
            android:textSize="14sp" />

        <com.neishenme.what.view.CircleImageView
            android:id="@+id/home_user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_home_title"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="11dp"
            android:src="@drawable/picture_moren" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_user_icon"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="11dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tv_user_name"
                android:src="@drawable/woman_icon" />

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tv_user_name"
                android:text="不限"
                android:textColor="@color/blackFF464F61"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="猜猜我叫什么"
                android:textColor="@color/yellow7f7e7c"
                android:textSize="11sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_pick_up"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/home_pick_uo" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:background="@color/Whiteffffff">

        <ImageView
            android:id="@+id/iv_restaurant_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/picture_moren" />

        <TextView
            android:id="@+id/invite_detail_flat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:paddingRight="12dp"
            android:textColor="#fff"
            android:textSize="9sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/Whiteffffff">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="35dp"
            android:text="￥ 2000"
            android:textColor="@color/whitefbfaf7"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_restrantant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="12dp"
            android:text="北京悠时国际餐饮"
            android:textColor="@color/whitefbfaf7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_restrantant_name"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"
            android:text="我请客 / BOY"
            android:textColor="@color/yellow7f7e7c"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_play_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_pause"
                android:text="0"
                android:textSize="10sp" />


            <ImageView
                android:id="@+id/iv_play_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/home_play" />

            <TextView
                android:id="@+id/tv_see_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:src="@drawable/home_look" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dbdbdb" />
</LinearLayout>