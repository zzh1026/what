<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a000"
    android:orientation="vertical">

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_vote_shared_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="36dp"
            android:src="@drawable/exp_vip_cancle" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:background="@drawable/vote_share_bg">

            <TextView
                android:id="@+id/dialog_vote_shared_lucky_content"
                android:layout_width="210dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="10元优惠券"
                android:textColor="#f66161"
                android:textSize="17sp"
                android:textStyle="bold" />

            <com.neishenme.what.view.RubberView
                android:id="@+id/dialog_vote_shared_lucky_prize"
                android:layout_width="210dp"
                android:layout_height="60dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/dialog_vote_shared_get_prize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:src="@drawable/vote_shared_get_prize" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>