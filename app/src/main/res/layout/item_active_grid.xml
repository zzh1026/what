<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="168dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <!--android:layout_height="218dp"-->

    <LinearLayout
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:background="@drawable/item_active_bg"
        android:orientation="vertical"
        android:paddingBottom="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126dp">

            <com.neishenme.what.view.RadiusImageViewTwo
                android:id="@+id/item_active_user_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/picture_moren" />

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_active_ticket_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/item_active_ticket_iv" />

                <TextView
                    android:id="@+id/item_active_ticket_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1200"
                    android:textColor="#fff"
                    android:textSize="12sp" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_active_user_gender"
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:layout_marginLeft="19dp"
                android:src="@drawable/woman_icon" />

            <TextView
                android:id="@+id/item_active_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="FACKKOI"
                android:textColor="#282828"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_active_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="5dp"
            android:text="20人已约TA"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="9dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/item_active_ticket_sub"
                android:layout_width="65dp"
                android:layout_height="23dp"
                android:background="@drawable/item_active_tick_sub"
                android:gravity="center"
                android:paddingBottom="2.2dp"
                android:text="戳我约TA"
                android:textColor="#fff"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_active_srcial_num"
        android:layout_width="37dp"
        android:layout_height="18dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/item_active_srcial_num"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:text="001"
        android:textColor="#f5f5f5"
        android:textSize="13sp" />


</RelativeLayout>