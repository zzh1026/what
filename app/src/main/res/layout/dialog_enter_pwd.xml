<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:background="@drawable/password_order_bg"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:padding="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="输入支付密码"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a000" />

    <com.neishenme.what.view.PasswordInputView
        android:id="@+id/passwordInputView"
        android:layout_width="250dip"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="#000"
        android:textSize="10dp"
        app:pivBorderColor="#cccccc"
        app:pivBorderRadius="1dp"
        app:pivBorderWidth="5dp"
        app:pivPasswordColor="#000"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="#000"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/bt_dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_pay_unselected"
            android:gravity="center"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="14dp" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#fff" />


        <TextView
            android:id="@+id/bt_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_pay_unselected"
            android:gravity="center"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>