<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/actionbar_login" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <RadioGroup
            android:id="@+id/rg_my_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_login_quick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="快速登录"
                android:textColor="@color/_343434" />

            <RadioButton
                android:id="@+id/rb_login_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="普通登录"
                android:textColor="@color/_8f8f8f" />
        </RadioGroup>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/login_spash" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/underLine_container"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#8f8f8f"
        android:orientation="horizontal"></LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>